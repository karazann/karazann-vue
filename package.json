{
    "name": "karazann-vue",
    "version": "0.1.0",
    "description": "My super-excellent Nuxt.js project",
    "author": "szkabaroli",
    "private": true,
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:cover": "jest --coverage --colors",
        "clear": "rm -rf dist",
        "start:dev": "nuxt-ts",
        "start": "nuxt-ts start",
        "build": "npm run clear && nuxt-ts build",
        "build:gen": "npm run clear && nuxt-ts generate",
        "format-vue": "prettier --write \"src/**/*.vue\" --parser vue --vue-indent-script-and-style",
        "format-ts": "prettier --write \"src/**/*.ts\"",
        "format": "npm run format-vue && npm run format-ts"
    },
    "dependencies": {
        "@bit/szkabaroli.karazann-shared.flow": "file:./src/shared/flow",
        "@vue/composition-api": "^0.3.2",
        "jquery": "^3.4.1",
        "jquery-slim": "^3.0.0",
        "regenerator-runtime": "^0.13.3",
        "typescript": "^3.7.2",
        "vue-slick": "^1.1.15"
    },
    "devDependencies": {
        "@nuxt/types": "^0.4.1",
        "@nuxt/typescript-build": "^0.3.5",
        "@nuxt/typescript-runtime": "^0.2.5",
        "@nuxtjs/pwa": "^3.0.0-beta.19",
        "@nuxtjs/sitemap": "^2.0.1",
        "@nuxtjs/style-resources": "^1.0.0",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.14",
        "@vue/test-utils": "^1.0.0-beta.30",
        "babel-core": "^6.26.3",
        "babel-jest": "^24.9.0",
        "jest": "^24.9.0",
        "jest-vue-preprocessor": "^1.7.0",
        "node-sass": "^4.13.0",
        "nuxt": "^2.10.2",
        "nuxt-sass-resources-loader": "^2.0.5",
        "prettier": "^1.19.1",
        "pug": "^2.0.4",
        "pug-plain-loader": "^1.0.0",
        "sass-loader": "^8.0.0",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "vue-jest": "^3.0.5"
    },
    "vue": {
        "configureWebpack": {
            "resolve": {
                "alias": {
                    "@": "src"
                }
            }
        }
    },
    "bit": {
        "env": {},
        "componentsDefaultDirectory": "src/shared/{name}",
        "packageManager": "npm"
    }
}
