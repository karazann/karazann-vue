{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "noEmit": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "@types/feather-icons",
            "node",
            "jest",
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "~/*": [
                "src/*"
            ]
        },
        "lib": [
            "es2015",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}